 {% extends 'front/base.html.twig' %}

{% block title %}
    {{ is_edit ? 'üêæ Modifier un animal' : 'üêæ Ajouter un animal' }}
{% endblock %}

{% block stylesheets %}
<style>

.pet-header-card {
    background: #d8c4ff;
    padding: 30px;
    border-radius: 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
}

.pet-name {
    width: 60%;
    display: flex;
    flex-direction: column;
}

.pet-name label {
    color: white;
    font-size: 18px;
    margin-bottom: 10px;
}

.header-input {
    background: transparent;
    border: none;
    border-bottom: 2px solid white;
    padding: 8px;
    font-size: 18px;
    color: white;
    outline: none;
}

.header-input::placeholder {
    color: rgba(255,255,255,0.8);
}

.pet-photo {
    text-align: center;
    color: white;
}

.photo-circle {
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.35);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32px;
    cursor: pointer;
    margin-bottom: 10px;
    transition: 0.3s;
}

.photo-circle:hover {
    background: rgba(255,255,255,0.6);
}

.input-modern,
.textarea-modern {
    width: 100%;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid #ddd;
}

.btn-modern {
    background: #b799ff;
    color: white;
    padding: 12px 25px;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: 0.3s;
}

.btn-modern:hover {
    background: #a680ff;
}

</style>
{% endblock %}

{% block body %}
<section class="content">
    <div class="pet-form-card">

        <div class="form-header">
            <h2>
                {{ is_edit ? 'üêæ Modifier un animal' : 'üêæ Ajouter un animal' }}
            </h2>
            <a href="{{ path('app_pet') }}" class="back-link">‚Üê Retour</a>
        </div>

{{ form_start(form, {
    attr: { novalidate: 'novalidate' },
    enctype: 'multipart/form-data'
}) }}
        {# GLOBAL ERRORS #}
        {% if form_errors(form) %}
            <div class="form-global-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <!-- HEADER VIOLET PASTEL -->
        <div class="pet-header-card">

            <div class="pet-name">
                <label>Nom de l'animal</label>
                {{ form_widget(form.name, {'attr': {'class': 'header-input'}}) }}
                <div class="error-message">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="pet-photo">
                <label for="photo-upload" class="photo-circle">
                    +
                </label>

                {{ form_widget(form.image, {
                    'attr': {
                        'id': 'photo-upload',
                        'style': 'display:none'
                    }
                }) }}

                <span>Photo de profil</span>
                <div class="error-message">
                    {{ form_errors(form.image) }}
                </div>
            </div>

        </div>

        <div class="form-grid">

            <!-- LEFT COLUMN -->
            <div class="left-column">

                <div class="form-group {{ form.breed.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Race</label>
                    {{ form_widget(form.breed, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.breed) }}
                    </div>
                </div>

                <div class="form-group {{ form.weight.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Poids (kg)</label>
                    {{ form_widget(form.weight, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.weight) }}
                    </div>
                </div>

                <div class="form-group {{ form.birthDate.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Date de naissance</label>
                    {{ form_widget(form.birthDate, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.birthDate) }}
                    </div>
                </div>

            </div>

            <!-- RIGHT COLUMN -->
            <div class="right-column">

                <div class="{{ form.typePet.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label class="section-label">Type d'animal</label>
                    <div class="type-grid">
                        {% for child in form.typePet %}
                            <label class="type-card">
                                {{ form_widget(child) }}
                                <span>{{ child.vars.label }}</span>
                            </label>
                        {% endfor %}
                    </div>
                    <div class="error-message">
                        {{ form_errors(form.typePet) }}
                    </div>
                </div>

                <div class="{{ form.gender.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label class="section-label">Genre</label>
                    <div class="gender-toggle">
                        {% for child in form.gender %}
                            <label class="gender-btn">
                                {{ form_widget(child) }}
                                {{ child.vars.label }}
                            </label>
                        {% endfor %}
                    </div>
                    <div class="error-message">
                        {{ form_errors(form.gender) }}
                    </div>
                </div>

            </div>
        </div>

        <!-- DESCRIPTION -->
        <div class="form-group full-width {{ form.description.vars.errors|length > 0 ? 'has-error' : '' }}">
            <label>Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'textarea-modern'}}) }}
            <div class="error-message">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <!-- HEALTH -->
        <div class="health-section">
            <h3>√âtat de sant√©</h3>

            <div class="health-grid">
                <label class="health-card">
                    {{ form_widget(form.isVaccinated) }}
                    Vaccin√©
                </label>

                <label class="health-card">
                    {{ form_widget(form.hasContagiousDisease) }}
                    Maladie contagieuse
                </label>

                <label class="health-card">
                    {{ form_widget(form.hasMedicalRecord) }}
                    Dossier m√©dical
                </label>

                <label class="health-card">
                    {{ form_widget(form.hasCriticalCondition) }}
                    √âtat critique
                </label>
            </div>
        </div>

        <div class="submit-area">
            <button class="btn-modern">
                {{ is_edit ? 'Mettre √† jour' : 'Enregistrer' }}
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</section>
{% endblock %}