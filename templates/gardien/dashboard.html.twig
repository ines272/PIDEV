{% extends 'front/base.html.twig' %}
{% block title %}Mon Espace Gardien - SitMyPet{% endblock %}

{% block stylesheets %}
<style>
    .dashboard-wrapper {
        max-width: 1100px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* ===== WELCOME CARD ===== */
    .welcome-card {
        background: linear-gradient(135deg, #0ea5e9 0%, #0369a1 100%);
        border-radius: 20px;
        padding: 32px 36px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(14, 165, 233, 0.35);
    }
    .welcome-card .welcome-left h2 {
        font-size: 2rem;
        font-weight: 800;
        margin: 0 0 8px;
    }
    .welcome-card .welcome-left p {
        margin: 4px 0;
        opacity: 0.85;
        font-size: 0.95rem;
    }
    .welcome-card .welcome-left p i { margin-right: 6px; }
    .welcome-card .welcome-right {
        font-size: 5rem;
        line-height: 1;
    }
    .badge-active {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.3);
        border-radius: 20px;
        padding: 5px 14px;
        font-size: 0.82rem;
        font-weight: 600;
        margin-top: 10px;
    }
    .badge-active::before {
        content: '';
        width: 8px; height: 8px;
        background: #4ade80;
        border-radius: 50%;
    }

    /* ===== FEATURE CARDS ===== */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }
    .feature-card {
        background: white;
        border-radius: 16px;
        padding: 28px 22px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.07);
        transition: transform 0.25s, box-shadow 0.25s;
        border: 2px solid transparent;
    }
    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.12);
        border-color: #0ea5e9;
    }
    .feature-card .feat-icon {
        font-size: 2.8rem;
        margin-bottom: 14px;
        display: block;
    }
    .feature-card h4 {
        font-size: 1.05rem;
        font-weight: 800;
        color: #1a1a2e;
        margin: 0 0 8px;
    }
    .feature-card p {
        font-size: 0.83rem;
        color: #6b7280;
        margin: 0 0 16px;
        line-height: 1.5;
    }
    .badge-soon {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: #fef3c7;
        color: #d97706;
        border-radius: 20px;
        padding: 4px 14px;
        font-size: 0.75rem;
        font-weight: 700;
    }
    .badge-soon::before { content: 'üïê'; }

    /* ===== PROFIL CARD ===== */
    .profile-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.07);
        margin-bottom: 30px;
    }
    .profile-card h3 {
        font-size: 1rem;
        font-weight: 800;
        color: #1a1a2e;
        margin: 0 0 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #f3f4f6;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .profile-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 14px;
    }
    .profile-item {
        background: #f9fafb;
        border-radius: 10px;
        padding: 14px 16px;
    }
    .profile-item .label {
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        color: #9ca3af;
        margin-bottom: 4px;
    }
    .profile-item .value {
        font-size: 0.92rem;
        font-weight: 700;
        color: #1a1a2e;
    }

    /* ===== LOGOUT ===== */
    .btn-logout-front {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #fee2e2;
        color: #dc2626;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 0.88rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.2s;
    }
    .btn-logout-front:hover {
        background: #fecaca;
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .features-grid { grid-template-columns: 1fr; }
        .profile-grid  { grid-template-columns: 1fr; }
        .welcome-card  { flex-direction: column; text-align: center; }
        .welcome-card .welcome-right { margin-top: 16px; }
    }
</style>
{% endblock %}

