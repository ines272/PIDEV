{% extends 'front/base.html.twig' %}

{% block title %}
    {{ is_edit ? 'Modifier un événement' : 'Ajouter un événement' }}
{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<section class="content">
    <div class="pet-form-card">

        <div class="form-header">
            <h2>
                {{ is_edit ? 'Modifier un événement' : 'Ajouter un événement' }}
            </h2>
            <a href="{{ path('app_event') }}" class="back-link">← Retour</a>
        </div>

        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

        {# GLOBAL ERRORS #}
        {% if form_errors(form) %}
            <div class="form-global-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="form-grid">
            <div class="left-column">

                {# NAME #}
                <div class="form-group {{ form.name.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Nom</label>
                    {{ form_widget(form.name, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.name) }}
                    </div>
                </div>

                {# DATE #}
                <div class="form-group {{ form.date.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Date</label>
                    {{ form_widget(form.date, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.date) }}
                    </div>
                </div>

                {# HEURE #}
                <div class="form-group {{ form.heure.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Heure</label>
                    {{ form_widget(form.heure, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.heure) }}
                    </div>
                </div>

                {# ADRESSE #}
                <div class="form-group {{ form.addresse.vars.errors|length > 0 ? 'has-error' : '' }}">
                    <label>Adresse</label>
                    {{ form_widget(form.addresse, {'attr': {'class': 'input-modern'}}) }}
                    <div class="error-message">
                        {{ form_errors(form.addresse) }}
                    </div>
                </div>

            </div>
        </div>

        {# DESCRIPTION FULL WIDTH #}
        <div class="form-group full-width {{ form.description.vars.errors|length > 0 ? 'has-error' : '' }}">
            <label>Description</label>
            {{ form_widget(form.description, {'attr': {'class': 'textarea-modern'}}) }}
            <div class="error-message">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group full-width">
    <label>Localisation (optionnel)</label>

    <div id="map"
         style="height: 350px; border-radius: 14px;"></div>

    {{ form_widget(form.latitude) }}
    {{ form_widget(form.longitude) }}
</div>

        <div class="submit-area">
            <button class="btn-modern">
                {{ is_edit ? 'Mettre à jour' : 'Enregistrer' }}
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</section>

<script>
document.addEventListener("DOMContentLoaded", function() {

    const latInput = document.getElementById("{{ form.latitude.vars.id }}");
    const lngInput = document.getElementById("{{ form.longitude.vars.id }}");

    let lat = latInput.value ? parseFloat(latInput.value) : 36.8065;
    let lng = lngInput.value ? parseFloat(lngInput.value) : 10.1815;

    const map = L.map("map").setView([lat, lng], 13);

    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
        attribution: "&copy; OpenStreetMap contributors"
    }).addTo(map);

    const marker = L.marker([lat, lng], {
        draggable: true
    }).addTo(map);

    marker.on("dragend", function(e) {
        const position = e.target.getLatLng();
        latInput.value = position.lat;
        lngInput.value = position.lng;
    });

    map.on("click", function(e) {
        marker.setLatLng(e.latlng);
        latInput.value = e.latlng.lat;
        lngInput.value = e.latlng.lng;
    });

});
</script>
{% endblock %}
