{% extends 'front/base.html.twig' %}

{% block title %}PackTrack – Track Your Parcel{% endblock %}

{% block body %}
<!-- HERO -->
<section class="hero">
    <div class="hero-content">
        <h1>SitMyPet</h1>
        <p>Comme à la maison, méme loin de vous</p>

       <div class="hero-section">
    <!-- PHOTO HERO -->
    <div class="hero-image">
        <img src="{{ asset('images/hommechien.png') }}" alt="Homme avec chien">
    </div>

    <!-- BARRE DE RECHERCHE -->
   <div class="search-box">
    <input type="text" placeholder="Rechercher un gardien...">
    <button class="icon-btn">
        <i class="fa fa-search"></i>
    </button>
</div>

<!-- BOUTON COMMENCER -->
    <div class="start-btn">
    <a href="/pet/new">
        <button type="button">Commencer</button>
    </a>
</div>

</div>

    </div>
</section>

<!-- CONTENT -->
<section class="content">

    <section class="content">

    {% if announcements is empty %}
        <div class="card">
            <p>Aucune annonce disponible pour le moment.</p>
        </div>
    {% endif %}

    {% for announcement in announcements %}
    <div class="announcement-card">

        <div class="announcement-top">

            <div class="owner-info">
                <div class="owner-avatar">
                    <i class="fa-solid fa-user"></i>
                </div>

                <div>
                    <strong>{{ announcement.user.prenom }}</strong>
                    <span class="owner-label">Owner</span>
                </div>
            </div>

            <!-- HEART ICON -->
            <button class="postuler-btn"
        data-id="{{ announcement.id }}">
    Postuler
</button>

        </div>

        <div class="announcement-body">
            <p><strong>Animal :</strong>
                {{ announcement.pet.name }}
                ({{ announcement.pet.typePet.value }})
            </p>

            <p><strong>Type de garde :</strong>
                {{ announcement.careType.value|replace({'_': ' '})|lower|capitalize }}
            </p>

            <p><strong>Période :</strong>
                {{ announcement.dateDebut|date('d/m/Y') }}
                –
                {{ announcement.dateFin|date('d/m/Y') }}
            </p>

            <p><strong>Prix :</strong>
                €{{ announcement.renumerationMin }}
                –
                €{{ announcement.renumerationMax }}
            </p>

            <p><strong>Adresse :</strong>
                {{ announcement.address }}
            </p>
        </div>

    </div>
{% endfor %}

</section>

   

</section>
<script>
document.addEventListener('DOMContentLoaded', function () {

    document.querySelectorAll('.postuler-btn').forEach(btn => {

        btn.addEventListener('click', function () {

            const announcementId = this.dataset.id;
            const button = this;

            fetch(`/postulation/${announcementId}/postuler`, {
    method: 'POST',
    credentials: 'same-origin',
    headers: {
        'X-Requested-With': 'XMLHttpRequest'
    }
})
            .then(response => response.json())
            .then(data => {

                if (data.success) {

                    button.innerText = 'Postulé ✅';
                    button.disabled = true;

                } else {
                    alert(data.error || 'Erreur');
                }

            });

        });

    });

});
</script>
{% endblock %}
