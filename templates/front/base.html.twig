<script>
document.addEventListener('DOMContentLoaded', function () {

    const notificationBtn = document.getElementById('notificationBtn');
    const notificationDropdown = document.getElementById('notificationDropdown');
    const notificationCount = document.getElementById('notificationCount');

    if (!notificationBtn || !notificationDropdown || !notificationCount) return;

    // ===============================
    // REFRESH UNREAD COUNTER
    // ===============================
    function refreshCount() {
        fetch('/notifications/count-unread')
            .then(response => response.json())
            .then(data => {
                notificationCount.textContent = data.count;

                if (data.count > 0) {
                    notificationCount.style.display = 'flex';
                } else {
                    notificationCount.style.display = 'none';
                }
            });
    }

    // ===============================
    // LOAD NOTIFICATIONS
    // ===============================
    function loadNotifications() {

notificationDropdown.innerHTML = `
    <div class="notification-loading">
        <i class="fa-solid fa-spinner fa-spin"></i>
        Chargement...
    </div>
`;

        fetch('/notifications/latest')
            .then(response => response.json())
            .then(data => {

                notificationDropdown.innerHTML = '';

                if (data.length === 0) {
                    notificationDropdown.innerHTML =
                        '<div class="notification-item">Aucune notification</div>';
                    return;
                }

                data.forEach(notification => {

                    const item = document.createElement('div');
                    item.classList.add('notification-item');

                    if (!notification.isRead) {
                        item.classList.add('unread');
                    }

                    item.innerHTML = `
                        <strong>${notification.title}</strong>
                        <p>${notification.message}</p>
                    `;

                    // CLICK HANDLER
                    item.addEventListener('click', function () {

                        fetch(`/notifications/${notification.id}/mark-read`, {
                            method: 'POST'
                        })
                        .then(() => {

                            refreshCount();

                            if (notification.actionUrl) {
                                window.location.href = notification.actionUrl;
                            } else {
                                loadNotifications();
                            }

                        });

                    });

                    notificationDropdown.appendChild(item);
                });
            });
    }

    // ===============================
    // INITIAL LOAD
    // ===============================
    refreshCount();

    // ===============================
    // TOGGLE DROPDOWN
    // ===============================
    notificationBtn.addEventListener('click', function (event) {
        event.stopPropagation();

        notificationDropdown.classList.toggle('show');

        if (notificationDropdown.classList.contains('show')) {
            loadNotifications();
        }
    });

    // ===============================
    // CLOSE ON OUTSIDE CLICK
    // ===============================
    document.addEventListener('click', function (event) {
        if (!notificationDropdown.contains(event.target) &&
            !notificationBtn.contains(event.target)) {
            notificationDropdown.classList.remove('show');
        }
    });

});
</script>


<script>
document.addEventListener('DOMContentLoaded', function () {

    const userId = document.body.dataset.userId;
    if (!userId) return;

    let socket;

    function connectWebSocket() {

        const protocol = window.location.protocol === "https:" ? "wss://" : "ws://";
        socket = new WebSocket(protocol + window.location.hostname + ":8081");

        socket.onopen = function () {
            console.log("‚úÖ WS Connected");

            socket.send(JSON.stringify({
                type: 'register',
                userId: userId
            }));
        };

        socket.onmessage = function (event) {

            const data = JSON.parse(event.data);

            // ============================
            // üîî NOTIFICATIONS
            // ============================
            if (data.type === "notification") {

                fetch('/notifications/count-unread')
                    .then(response => response.json())
                    .then(data => {
                        const notificationCount = document.getElementById('notificationCount');
                        if (!notificationCount) return;

                        notificationCount.textContent = data.count;
                        notificationCount.style.display = data.count > 0 ? 'flex' : 'none';
                    });
            }

            // ============================
            // üí¨ CHAT
            // ============================
            if (data.type === "chat") {

                if (window.currentConversationId &&
                    Number(data.conversationId) === Number(window.currentConversationId)) {

                    if (typeof appendMessage === "function") {
                        appendMessage(data.senderName, data.content);
                    }
                }
            }

        };

        socket.onerror = function (error) {
            console.log("‚ùå WS Error:", error);
            socket.close();
        };

        socket.onclose = function () {
            console.log("‚ö†Ô∏è WS Disconnected. Reconnecting in 3s...");
            setTimeout(connectWebSocket, 3000);
        };
    }

    connectWebSocket();

});
</script>
