    }

    /* ===== WELCOME CARD ===== */
    .welcome-card {
        background: linear-gradient(135deg, #7c3aed 0%, #4a42d6 100%);
        border-radius: 20px;
        padding: 32px 36px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(124,58,237,0.4);
    }
    .welcome-card h2 {
        font-size: 1.9rem;
        font-weight: 800;
        margin: 0 0 10px;
        color: white;
    }
    .welcome-card .info {
        margin: 5px 0;
        opacity: 0.88;
        font-size: 0.93rem;
        color: white;
    }
    .welcome-card .info i { margin-right: 6px; }
    .welcome-card .emoji { font-size: 5rem; line-height: 1; }
    .badge-actif {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: rgba(255,255,255,0.2);
        border: 1px solid rgba(255,255,255,0.35);
        border-radius: 20px;
        padding: 5px 14px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 12px;
        color: white;
    }
    .badge-actif i { color: #4ade80; }

    /* ===== FEATURES ===== */
    .features-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }
    .feat-card {
        background: white;
        border-radius: 16px;
        padding: 28px 20px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.07);
        transition: transform 0.25s, box-shadow 0.25s;
        border: 2px solid transparent;
    }
    .feat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.12);
        border-color: #7c3aed;
    }
    .feat-card .icon { font-size: 2.8rem; margin-bottom: 14px; display: block; }
    .feat-card h4 { font-size: 1rem; font-weight: 800; color: #1a1a2e; margin: 0 0 8px; }
    .feat-card p { font-size: 0.82rem; color: #6b7280; margin: 0 0 16px; line-height: 1.5; }
    .badge-soon {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background: #fef3c7;
        color: #d97706;
        border-radius: 20px;
        padding: 5px 14px;
        font-size: 0.75rem;
        font-weight: 700;
    }

    /* ===== PROFIL ===== */
    .profil-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.07);
        margin-bottom: 40px;
    }
    .profil-card h3 {
        font-size: 1rem;
        font-weight: 800;
        color: #1a1a2e;
        margin: 0 0 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #f3f4f6;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .profil-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 14px;
    }
    .profil-item {
        background: #f9fafb;
        border-radius: 10px;
        padding: 14px 16px;
    }
    .profil-item .plabel {
        font-size: 0.68rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #9ca3af;
        margin-bottom: 5px;
    }
    .profil-item .pvalue {
        font-size: 0.92rem;
        font-weight: 700;
        color: #1a1a2e;
    }
    .logout-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #fee2e2;
        color: #dc2626;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-size: 0.88rem;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.2s;
        margin-top: 20px;
        cursor: pointer;
    }
    .logout-btn:hover { background: #fecaca; transform: translateY(-2px); color: #b91c1c; }

    @media(max-width: 768px) {
        .features-row { grid-template-columns: 1fr; }
        .profil-grid  { grid-template-columns: 1fr; }
        .welcome-card { flex-direction: column; gap: 20px; }
        .welcome-card .emoji { font-size: 3rem; }
    }
</style>
{% endblock %}

