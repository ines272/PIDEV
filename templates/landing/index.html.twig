            border-radius: 30px;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .hero-title {
            font-family: 'Fredoka', sans-serif;
            font-size: 58px;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 25px;
            color: #1a1a1a;
        }

        .hero-title .highlight {
            background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero-description {
            font-size: 20px;
            color: #666;
            line-height: 1.7;
            margin-bottom: 40px;
        }

        .hero-cta {
            display: flex;
            gap: 20px;
            margin-bottom: 40px;
        }

        .btn-cta {
