            <p style="font-size: 20px; font-weight: 600; color: #333; margin: 0;">{{ reclamation.sujet }}</p>
        </div>

        {# DESCRIPTION #}
        <div style="margin-bottom: 25px;">
            <h3 style="font-size: 14px; font-weight: 600; color: #888; text-transform: uppercase; margin-bottom: 8px;">Description</h3>
            <p style="font-size: 16px; color: #555; line-height: 1.6; margin: 0;">{{ reclamation.description }}</p>
        </div>

        {# INFORMATIONS CLIENT #}
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; padding-top: 20px; border-top: 2px solid #f0f0f0;">
            <div>
                <h3 style="font-size: 14px; font-weight: 600; color: #888; text-transform: uppercase; margin-bottom: 8px;">üë§ Client</h3>
                <p style="font-size: 16px; color: #333; font-weight: 600; margin: 0;">{{ reclamation.nomClient }}</p>
            </div>
            <div>
