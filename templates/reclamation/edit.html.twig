{% extends 'front/base.html.twig' %}

{% block title %}Modifier R√©clamation #{{ reclamation.id }}{% endblock %}

{% block body %}
<div class="container" style="max-width: 800px; margin: 40px auto; padding: 0 20px;">
    
    {# EN-T√äTE #}
    <div style="margin-bottom: 30px;">
        <a href="{{ path('app_reclamation_show', {id: reclamation.id}) }}" 
           style="display: inline-block; color: #667eea; text-decoration: none; font-weight: 600; margin-bottom: 15px;">
            ‚Üê Retour aux d√©tails
        </a>
        <h1 style="font-size: 32px; font-weight: 700; color: #1a1a1a; margin-bottom: 10px;">
            ‚úèÔ∏è Modifier la R√©clamation #{{ reclamation.id }}
        </h1>
        <p style="color: #666; font-size: 16px;">Modifiez les informations de la r√©clamation</p>
    </div>

    {# FLASH MESSAGES #}
    {% for message in app.flashes('success') %}
        <div style="background: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
            ‚úì {{ message }}
        </div>
    {% endfor %}

    {# CARTE FORMULAIRE #}
    <div style="background: white; padding: 40px; border-radius: 12px; box-shadow: 0 2px 20px rgba(0,0,0,0.1);">
        
        {{ form_start(form) }}

        {# AFFICHAGE DES ERREURS GLOBAL #}
        {% if not form.vars.valid %}
            <div style="background: #f8d7da; border: 2px solid #f5c6cb; color: #721c24; padding: 20px; border-radius: 8px; margin-bottom: 25px;">
                <h4 style="margin: 0 0 10px 0; font-size: 16px;">‚ö†Ô∏è Erreurs de validation :</h4>
                <ul style="margin: 0; padding-left: 20px;">
                    {% for child in form.children %}
                        {% for error in child.vars.errors %}
                            <li><strong>{{ child.vars.label }}:</strong> {{ error.message }}</li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {# INFORMATIONS CLIENT #}
        <div style="margin-bottom: 30px;">
            <h3 style="font-size: 18px; font-weight: 600; color: #333; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #f0f0f0;">
                üë§ Informations du Client
            </h3>
            
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
                <div>
                    <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                        Nom complet <span style="color: #e74c3c;">*</span>
                    </label>
                    {{ form_widget(form.nomClient, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;'}}) }}
                </div>

                <div>
                    <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                        Email <span style="color: #e74c3c;">*</span>
                    </label>
                    {{ form_widget(form.emailClient, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;'}}) }}
                </div>
            </div>
        </div>

        {# D√âTAILS DE LA R√âCLAMATION #}
        <div style="margin-bottom: 30px;">
            <h3 style="font-size: 18px; font-weight: 600; color: #333; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 2px solid #f0f0f0;">
                üìù D√©tails de la R√©clamation
            </h3>

            <div style="margin-bottom: 20px;">
                <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                    Sujet <span style="color: #e74c3c;">*</span>
                </label>
                {{ form_widget(form.sujet, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;'}}) }}
            </div>

            <div style="margin-bottom: 20px;">
                <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                    Description d√©taill√©e <span style="color: #e74c3c;">*</span>
                </label>
                {{ form_widget(form.description, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px; min-height: 120px;'}}) }}
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <div>
                    <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                        Statut <span style="color: #e74c3c;">*</span>
                    </label>
                    {{ form_widget(form.statut, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;'}}) }}
                    <small style="color: #999; font-size: 12px; display: block; margin-top: 5px;">
                        Changez le statut selon l'√©tat de traitement
                    </small>
                </div>

                <div>
                    <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                        Priorit√© <span style="color: #e74c3c;">*</span>
                    </label>
                    {{ form_widget(form.priorite, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;'}}) }}
                </div>
            </div>
        </div>

        {# BOUTONS D'ACTION #}
        <div style="display: flex; gap: 15px; padding-top: 20px; border-top: 2px solid #f0f0f0;">
            <button type="submit" 
                    style="flex: 1; padding: 15px 30px; background: linear-gradient(135deg, #f5a623 0%, #f76b1c 100%); color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 16px; cursor: pointer; box-shadow: 0 4px 15px rgba(245, 166, 35, 0.4); transition: transform 0.2s;">
                üíæ Enregistrer les modifications
            </button>
            
            <a href="{{ path('app_reclamation_show', {id: reclamation.id}) }}" 
               style="flex: 0.3; padding: 15px 30px; background: #e0e0e0; color: #555; border: none; border-radius: 8px; font-weight: 600; font-size: 16px; text-decoration: none; text-align: center; display: flex; align-items: center; justify-content: center;">
                Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>

    {# INFO DATE DE CR√âATION #}
    <div style="background: #e8f4f8; padding: 15px; border-radius: 8px; margin-top: 20px; border-left: 4px solid #17a2b8;">
        <div style="display: flex; align-items: center; gap: 10px;">
            <span style="font-size: 20px;">üìÖ</span>
            <span style="color: #0c5460; font-size: 14px;">
                R√©clamation cr√©√©e le <strong>{{ reclamation.dateReclamation|date('d/m/Y √† H:i') }}</strong>
            </span>
        </div>
    </div>
</div>

<style>
    input:focus, textarea:focus, select:focus {
        outline: none;
        border-color: #f5a623 !important;
        box-shadow: 0 0 0 3px rgba(245, 166, 35, 0.1);
    }

    button[type="submit"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 166, 35, 0.5);
    }
</style>
{% endblock %}