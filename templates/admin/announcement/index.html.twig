{% extends 'admin/base.html.twig' %}

{% block page_title %}Gestion des Annonces{% endblock %}

{% block content %}

<div class="page-header">
    <h2>Toutes les Annonces</h2>
    <p>Liste complète des annonces enregistrées sur la plateforme.</p>
</div>

<div class="data-card">
    <div class="data-card-header">
        <div class="data-card-title">
            <i class="fas fa-bullhorn me-2"></i>Liste des annonces
        </div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Adresse</th>
                    <th>Type Garde</th>
                    <th>Date Début</th>
                    <th>Date Fin</th>
                    <th>Visites / Jour</th>
                    <th>Rémunération</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>

            {% for announcement in announcements %}
                <tr>
                    <td>{{ announcement.address }}</td>
                    <td>{{ announcement.careType.value }}</td>
                    <td>{{ announcement.dateDebut|date('d/m/Y') }}</td>
                    <td>{{ announcement.dateFin|date('d/m/Y') }}</td>
                    <td>{{ announcement.visitPerDay }}</td>
                    <td>
                        {{ announcement.renumerationMin }}€ -
                        {{ announcement.renumerationMax }}€
                    </td>

                    <td class="text-center d-flex justify-content-center gap-2">

                        <button class="btn-action btn-edit"
                                data-bs-toggle="modal"
                                data-bs-target="#editModal{{ announcement.id }}">
                            <i class="fas fa-pen"></i>
                        </button>

                        <button class="btn-action btn-delete"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal{{ announcement.id }}">
                            <i class="fas fa-trash"></i>
                        </button>

                    </td>
                </tr>

                {# ================= DELETE MODAL ================= #}
                <div class="modal fade" id="deleteModal{{ announcement.id }}" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content" style="border-radius:16px;">

                            <div class="modal-header border-0 pb-0">
                                <h5 class="modal-title fw-bold text-danger">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Confirmation de suppression
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>

                            <div class="modal-body pt-2">
                                Êtes-vous sûr de vouloir supprimer cette annonce ?
                                <br><br>
                                <strong>{{ announcement.address }}</strong>
                            </div>

                            <div class="modal-footer border-0">
                                <button type="button" class="btn-cancel" data-bs-dismiss="modal">
                                    Annuler
                                </button>

                                <form method="post"
                                      action="{{ path('app_announcement_delete_admin', {id: announcement.id}) }}">

                                    <input type="hidden"
                                           name="_token"
                                           value="{{ csrf_token('delete_announcement_' ~ announcement.id) }}">

                                    <button class="btn-save"
                                            style="background:linear-gradient(135deg,#e53935,#c62828);">
                                        Supprimer
                                    </button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>

                {# ================= EDIT MODAL ================= #}
                <div class="modal fade" id="editModal{{ announcement.id }}" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content" style="border-radius:16px;">

                            <form method="post"
                                  action="{{ path('app_admin_announcement_edit', {id: announcement.id}) }}">

                                <div class="modal-header border-0">
                                    <h5 class="modal-title fw-bold text-primary">
                                        <i class="fas fa-pen me-2"></i>Modifier Annonce
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="row g-3">

                                        <div class="col-md-6">
                                            <label class="form-label">Adresse</label>
                                            <input type="text"
                                                   name="address"
                                                   value="{{ announcement.address }}"
                                                   class="form-control" required>
                                        </div>

                                      

                                     

                                        <div class="col-md-6">
                                            <label class="form-label">Date Début</label>
                                            <input type="date"
                                                   name="dateDebut"
                                                   value="{{ announcement.dateDebut|date('Y-m-d') }}"
                                                   class="form-control" required>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Date Fin</label>
                                            <input type="date"
                                                   name="dateFin"
                                                   value="{{ announcement.dateFin|date('Y-m-d') }}"
                                                   class="form-control" required>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Visites / Jour</label>
                                            <input type="number"
                                                   name="visitPerDay"
                                                   value="{{ announcement.visitPerDay }}"
                                                   class="form-control" required>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Rémunération Min</label>
                                            <input type="number" step="0.1"
                                                   name="renumerationMin"
                                                   value="{{ announcement.renumerationMin }}"
                                                   class="form-control" required>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Rémunération Max</label>
                                            <input type="number" step="0.1"
                                                   name="renumerationMax"
                                                   value="{{ announcement.renumerationMax }}"
                                                   class="form-control" required>
                                        </div>

                                    </div>
                                </div>

                                <div class="modal-footer border-0">
                                    <button type="button" class="btn-cancel" data-bs-dismiss="modal">
                                        Annuler
                                    </button>

                                    <button class="btn-save">
                                        Enregistrer
                                    </button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>

            {% else %}
                <tr>
                    <td colspan="7" class="text-center py-4">
                        Aucune annonce trouvée.
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>
</div>

{% endblock %}
