                {% elseif reclamation.statut == 'en_cours' %}
                    <span style="background: rgba(255,255,255,0.3); padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                        üîÑ En cours
                    </span>
                {% else %}
                    <span style="background: rgba(255,255,255,0.3); padding: 6px 12px; border-radius: 20px; font-size: 12px; font-weight: 600;">
                        ‚úÖ R√©solue
                    </span>
                {% endif %}
            </div>
        </div>

        <p style="opacity: 0.95; font-size: 15px; line-height: 1.6; margin-bottom: 15px;">
            {{ reclamation.description }}
        </p>

        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; padding-top: 15px; border-top: 1px solid rgba(255,255,255,0.2);">
            <div>
                <div style="font-size: 11px; opacity: 0.8; margin-bottom: 3px;">CLIENT</div>
                <div style="font-weight: 600; font-size: 14px;">{{ reclamation.nomClient }}</div>
            </div>
            <div>
                <div style="font-size: 11px; opacity: 0.8; margin-bottom: 3px;">EMAIL</div>
                <div style="font-weight: 600; font-size: 14px;">{{ reclamation.emailClient }}</div>
            </div>
            <div>
                <div style="font-size: 11px; opacity: 0.8; margin-bottom: 3px;">DATE</div>
                <div style="font-weight: 600; font-size: 14px;">{{ reclamation.dateReclamation|date('d/m/Y') }}</div>
            </div>
        </div>
    </div>

    {# FORMULAIRE DE R√âPONSE #}
    <div style="background: white; padding: 40px; border-radius: 12px; box-shadow: 0 2px 20px rgba(0,0,0,0.1);">
        
