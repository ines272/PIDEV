            <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                üë®‚Äçüíº Votre nom (auteur de la r√©ponse) <span style="color: #e74c3c;">*</span>
            </label>
            {{ form_widget(form.auteur, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px;', 'placeholder': 'Ex: Service Support'}}) }}
            <small style="color: #999; font-size: 12px; display: block; margin-top: 5px;">
                Ce nom sera visible par le client
            </small>
        </div>

        {# CONTENU #}
        <div style="margin-bottom: 25px;">
            <label style="display: block; font-size: 14px; font-weight: 600; color: #555; margin-bottom: 8px;">
                üí¨ Contenu de la r√©ponse <span style="color: #e74c3c;">*</span>
            </label>
            {{ form_widget(form.contenu, {'attr': {'style': 'width: 100%; padding: 12px 15px; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px; min-height: 150px;', 'placeholder': 'R√©digez votre r√©ponse d√©taill√©e au client...'}}) }}
            <small style="color: #999; font-size: 12px; display: block; margin-top: 5px;">
                Minimum 10 caract√®res - Soyez clair et professionnel
            </small>
        </div>

        {# BOUTONS #}
        <div style="display: flex; gap: 15px; padding-top: 20px; border-top: 2px solid #f0f0f0;">
            <button type="submit" 
                    style="flex: 1; padding: 15px 30px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 16px; cursor: pointer; box-shadow: 0 4px 15px rgba(17, 153, 142, 0.4); transition: transform 0.2s;">
                üì§ Envoyer la R√©ponse
            </button>
            
            <a href="{{ path('app_reclamation_show', {id: reclamation.id}) }}" 
               style="flex: 0.3; padding: 15px 30px; background: #e0e0e0; color: #555; border: none; border-radius: 8px; font-weight: 600; font-size: 16px; text-decoration: none; text-align: center; display: flex; align-items: center; justify-content: center;">
                Annuler
            </a>
        </div>

        {{ form_end(form) }}
    </div>

    {# INFO AUTOMATIQUE #}
    <div style="background: #fff3cd; padding: 15px; border-radius: 8px; margin-top: 20px; border-left: 4px solid #ffc107;">
        <div style="display: flex; align-items: start; gap: 10px;">
            <span style="font-size: 20px;">‚ÑπÔ∏è</span>
            <div>
                <strong style="color: #856404; display: block; margin-bottom: 5px;">Note importante</strong>
                <p style="color: #856404; font-size: 14px; line-height: 1.6; margin: 0;">
                    {% if reclamation.statut == 'en_attente' %}
                        Le statut de cette r√©clamation passera automatiquement √† <strong>"En cours"</strong> apr√®s l'envoi de votre r√©ponse.
                    {% else %}
